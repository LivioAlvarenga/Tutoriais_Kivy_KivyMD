#:kivy 2.0.0

Screen:
    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {'center_x': .5, 'center_y': .5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: my_label
            text: app.label1
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 10

        MDTextFieldRound:
            id: user
            hint_text: app.username
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}

        MDTextFieldRound:
            id: senha
            hint_text: app.password
            icon_right: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}
            password: True

        MDRoundFlatButton:
            text: app.login
            font_size: 12
            pos_hint: {'center_x': .5}
            on_press: app.logger()

        MDRoundFlatButton:
            text: app.cleaner
            font_size: 12
            pos_hint: {'center_x': .5}
            on_press: app.clear()

        MDRoundFlatButton:
            text: app.change
            font_size: 12
            pos_hint: {'center_x': .5}
            on_press: app.change_language("pt_BR" if app.language == "en_US" else "en_US")

        Widget:
            size_hint_y: None
            height: 10
