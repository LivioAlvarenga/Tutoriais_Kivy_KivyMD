#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex

<Tarefas>:
    name: 'tarefas'
    orientation: 'vertical'
    MDToolbar:
        id: top_toolbar
        title: 'Title and comunication!'
        size_hint_y: None
        height: 40
        elevation: 20
        pos_hint: {'top': 1 }
        md_bg_color: rgba('#66d5ef')
        specific_text_color: rgba('#000000')
        left_action_items:
            [["robot", lambda x: root.robot_function(), 'Tool Tips Robot']]
        right_action_items:
            [['skip-previous', lambda x: root.left_function(), 'Tool Tips Skip Previous'],
            ['skip-next', lambda x: root.right_function(), 'Tool Tips Skip Next']]

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: rgba('#66d5ef')
        padding: 4
        spacing: 4
