#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex

<Label_Padrao@Label>
    font_size: 32
    color: rgba('#021aee') # cor da fonte
    bold: True
    canvas.before:
        Color:
            rgba: rgba('#ffc77d')
        Rectangle:
            size: self.size
            pos: self.pos

<Botao_Padrao@Button>
    font_size: 32
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: rgba('#01579B')

<Botao_Padrao_1@Button>
    font_size: 32
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: rgba('#0277BD')


<MyLayout>

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 1
        spacing: 1

        TextInput:
            id: calc_input
            text: '0'
            halign: 'right'
            font_size: 65
            size_hint: (1, 0.15)
            background_color: rgba('#B3E5FC')

        GridLayout:
            cols: 4
            rows: 5
            spacing: 0.5

            Botao_Padrao_1:
                text: '%'
            Botao_Padrao_1:
                text: 'C'
                on_press: root.limpar()
            Botao_Padrao_1:
                text: u'\u00AB'
                on_press: root.remover()
            Botao_Padrao_1:
                text: '/'
                on_press: root.sinal_mat('/')
            Botao_Padrao:
                text: '7'
                on_press: root.button_press(7)
            Botao_Padrao:
                text: '8'
                on_press: root.button_press(8)
            Botao_Padrao:
                text: '9'
                on_press: root.button_press(9)
            Botao_Padrao_1:
                text: 'x'
                on_press: root.sinal_mat('*')
            Botao_Padrao:
                text: '4'
                on_press: root.button_press(4)
            Botao_Padrao:
                text: '5'
                on_press: root.button_press(5)
            Botao_Padrao:
                text: '6'
                on_press: root.button_press(6)
            Botao_Padrao_1:
                text: '-'
                on_press: root.sinal_mat('-')
            Botao_Padrao:
                text: '1'
                on_press: root.button_press(1)
            Botao_Padrao:
                text: '2'
                on_press: root.button_press(2)
            Botao_Padrao:
                text: '3'
                on_press: root.button_press(3)
            Botao_Padrao_1:
                text: '+'
                on_press: root.sinal_mat('+')
            Botao_Padrao:
                text: '+/-'
                on_press: root.negativar()
            Botao_Padrao:
                text: '0'
                on_press: root.button_press(0)
            Botao_Padrao:
                text: '.'
                on_press: root.decimal()
            Botao_Padrao_1:
                text: '='
                on_press: root.igual()
