#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex

<Label_Padrao@Label>
    font_size: 32
    size_hint: (1, 0.7)
    #text_size: self.size
    haling: 'center'
    valign: 'middle'
    color: rgba('#000000') # cor da fonte
    canvas.before:
        Color:
            rgba: rgba('#ECEFF1')
        Rectangle:
            size: self.size
            pos: self.pos

<MyLayout>
    slide_text: slider_label
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        #padding: 50
        #spacing: 20

        Label_Padrao:
            id: slider_label
            text: 'Slider test'

        Slider:
            size_hint: (1, 0.3)
            min: 1
            max: 50
            step: 1
            orientation: 'horizontal'
            on_value: root.slider_it(*args)
