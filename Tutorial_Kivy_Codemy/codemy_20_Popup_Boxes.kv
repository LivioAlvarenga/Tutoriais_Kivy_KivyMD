#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex
#:import Factory kivy.factory.Factory

<Label_Padrao@Label>
    font_size: 32
    #size_hint: (1, 0.2)
    #text_size: self.size
    bold: True
    haling: 'center'
    valign: 'middle'
    color: rgba('#000000') # cor da fonte
    canvas.before:
        Color:
            rgba: rgba('#FFB74D')
        Rectangle:
            size: self.size
            pos: self.pos

<Botao_Padrao@Button>
    font_size: 32
    #size_hint: (1, 0.5)
    background_normal: ''
    background_color: rgba('#FF6D00')

<MyPopup@Popup>
    auto_dismiss: False # ao clicar fora não sai do popup
    size_hint: 0.6, 0.4
    pos_hint: {'x': 0.2, 'top': 0.9}
    title: 'Testando popup!'

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 5

        Label_Padrao:
            id: popup_label
            text: 'Texto do popup!!!'

        Botao_Padrao:
            text: 'Fechar!!!'
            font_size: 24
            on_release: root.dismiss() # dismiss função bultin de popup

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 20

        Label_Padrao:
            text: 'Popup test'
        Botao_Padrao:
            text: 'PopUp'
            on_release: Factory.MyPopup().open()
