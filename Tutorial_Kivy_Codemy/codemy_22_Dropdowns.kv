#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex
#:import Factory kivy.factory.Factory

<Label_Padrao@Label>
    font_size: 32
    #size_hint: (1, 0.2)
    #text_size: self.size
    bold: True
    haling: 'center'
    valign: 'middle'
    color: rgba('#000000') # cor da fonte
    canvas.before:
        Color:
            rgba: rgba('#FFB74D')
        Rectangle:
            size: self.size
            pos: self.pos

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 20

        Label_Padrao:
            id: click_label
            text: 'Escolha a pizza favorita abaixo'

        Spinner:
            id: spinner_id
            size_hint: (0.8, 0.2)
            #pos_hint: {'center': 0.5}
            text: 'Pizza favorita'
            background_normal: ''
            background_color: rgba('#FF6D00')
            values: ['A moda', 'Marguerita', 'Pepperone']
            on_text: root.spinner_clicked(spinner_id.text)


        Label_Padrao:
            text: ''
