#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex

MDBoxLayout:
    orientation: 'vertical'
    MDToolbar:
        title: 'Bottom Navbar'
        md_bg_color: rgba('#FFD600')
        specific_text_color: rgba('#000000')

    MDBottomNavigation:
        panel_color: rgba('#FFD600')
        text_color_active: rgba('#000000')
        text_color_normal: rgba('#555555')

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Whatsapp'
            icon: 'whatsapp'
            MDLabel:
                text: 'Zap select'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'YouTube'
            icon: 'youtube'
            MDLabel:
                text: 'YouTube select'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Instagram'
            icon: 'instagram'
            MDLabel:
                text: 'My Instagram select'
                halign: 'center'
