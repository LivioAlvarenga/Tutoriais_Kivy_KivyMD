#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex

<Label_Padrao@Label>
    font_size: 32
    size_hint: (1, 1)
    #text_size: self.size
    haling: 'center'
    valign: 'middle'
    color: rgba('#000000') # cor da fonte
    canvas.before:
        Color:
            rgba: rgba('#ECEFF1')
        Rectangle:
            size: self.size
            pos: self.pos

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        #padding: 50
        #spacing: 20
        Accordion:
            orientation: 'vertical'

            AccordionItem:
                title: 'Painel 1'
                Image:
                    source: 'Tutorial_Kivy_Codemy/Icones/batman.png'

            AccordionItem:
                title: 'Painel 2'
                Label_Padrao:
                    text: 'Painel 2 texto'

            AccordionItem:
                title: 'Painel 3'
                Label_Padrao:
                    text: 'Painel 3 texto'

            AccordionItem:
                title: 'Painel 4'
                Image:
                    source: 'Tutorial_Kivy_Codemy/Icones/Logo_2_ProdutiveSE.png'
