#:kivy 2.0.0
#:import utils kivy.utils

<Botao_Padrao@Button>
    font_size: 32
    background_normal: ''
    background_color: utils.rgba('#b44683')

<TextInput_Padrao@TextInput>
    multiline: False
    background_color: utils.rgba('#55a2d6')

<Label_Padrao@Label>
    font_size: 32

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label_Padrao:
            text: 'Name'
        TextInput_Padrao:

        Label_Padrao:
            text: 'Pizza favorita'
        TextInput_Padrao:

        Botao_Padrao:
            text: 'Submit'
        Botao_Padrao:
            text: 'Clear'
