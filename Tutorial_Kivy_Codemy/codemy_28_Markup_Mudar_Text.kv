#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex

<Label_Padrao@Label>
    font_size: 32
    color: rgba('#000000') # cor da fonte
    bold: True
    canvas.before:
        Color:
            rgba: rgba('#FFD600')
        Rectangle:
            size: self.size
            pos: self.pos

<Botao_Padrao@Button>
    font_size: 32
    #size_hint: (1, 0.5)
    background_normal: ''
    background_color: rgba('#212121')

<MyLayout>

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 50
        spacing: 20

        Label_Padrao:
            markup: True
            size_hint: (1, 0.2)
            text: 'Testando [size=70][color=#D50000][b]Bold[/b][/color][/size] [font=arial]texto[/font]'

        Label_Padrao:
            markup: True
            size_hint: (1, 0.2)
            text: 'Testando [color=#D50000][i]Italics[/i][/color] texto [sup]Up[/sup] and [sub]Down[/sub]'

        Botao_Padrao:
            markup: True
            text: '[u]Click[/u] aqui!'
            size_hint: (0.3, 0.3)
            pos_hint: {'center_x': 0.5}

        Label_Padrao:
