#:kivy 2.0.0

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 50
        spacing: 20 # em pixels

        Button:
            text: 'Hello World!'

        Button:
            text: 'Python is the best!'

        Button:
            text: 'Kivy is best too!'
# TAMANHO AUTOMATICO com size_hint: (.5, .5) o botão ocupara 50% em x e 50% em y
            #size_hint: (.5, .5)
# TAMANHO FIXO com size_hint: (None, None) e com width e height.
            size_hint: (None, None)
            width: 100
            height: 50
# Pos_hint determina a posição no eixo x e y com valores de 0 a 1. 0.5 = 50%
            pos_hint: {'center_x': .5, 'center_y': .5}
