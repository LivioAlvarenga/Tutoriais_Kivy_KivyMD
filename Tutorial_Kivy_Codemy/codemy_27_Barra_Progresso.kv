#:kivy 2.0.0
#:import rgba kivy.utils.get_color_from_hex

<Label_Padrao@Label>
    font_size: 32
    color: rgba('#000000') # cor da fonte
    bold: True
    canvas.before:
        Color:
            rgba: rgba('#FFD600')
        Rectangle:
            size: self.size
            pos: self.pos

<Botao_Padrao@Button>
    font_size: 32
    #size_hint: (1, 0.5)
    background_normal: ''
    background_color: rgba('#212121')

<MyLayout>

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 50
        spacing: 20

        Label_Padrao:
            id: my_label
            size_hint: (1, 0.1)
            text: '0% Progress'

        ProgressBar
            id: my_progress_bar
            size_hint: (1, 0.1)
            value: 0
            min: 0
            max: 100
            pos_hint: {'x': .1}
            size_hint_x: .8

        Botao_Padrao:
            text: 'Click aqui!'
            size_hint: (0.3, 0.3)
            pos_hint: {'center_x': 0.5}
            on_press: root.press_it()
        Label_Padrao:
